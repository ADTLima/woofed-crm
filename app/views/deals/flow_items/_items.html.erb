<div class="col-12">
  <div>
    <header class="text-center m-3">
      <span class="badge badge-light">Planned</span>
    </header>
    <div class="activities">
      <% flow_items.not_done_items.each do | flow_item | %>
        <%= render "/deals/flow_items/item", flow_item: flow_item %>
      <% end %>
    </div>
  </div>

  <div>
    <header class="text-center m-3">
      <span class="badge badge-light">Done</span>
    </header>
    <div class="activities">
      <% flow_items.done_items.each do | flow_item | %>
        <%= render "/deals/flow_items/item", flow_item: flow_item %>
      <% end %>
    </div>
  </div>
</div>

<div class="row float-right p-3">
  <div class="col-12 mr-5">
    <%== pagy_bootstrap_nav(@pagy) %>
  </div>
</div>